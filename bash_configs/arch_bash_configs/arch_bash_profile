#
# ~/.bash_profile
#

# Source interactive shell settings if available
bashrc="$HOME/.bashrc"
if [[ ! -r "$bashrc" ]]; then
	printf 'Warning: %q not found or not readable.\n' "$bashrc" >&2
else
	source "$bashrc"
fi

# Start graphical session on tty1 if i3 isn't already running
if [[ $(tty) == /dev/tty1 ]]; then
	xinitrc="$HOME/.config/X11/xinitrc"
	if [[ ! -r "$xinitrc" ]]; then
		printf 'Warning: %q not found or not readable.\n' "$xinitrc" >&2
	elif ! pgrep -u "$USER" -x i3 &>/dev/null; then
		exec startx "$xinitrc"
	fi
fi
