#
# ~/.bash_aliases
#

# Load all Bash configuration includes from dotfiles
includes=(
  helper_functions
  dircolor_configs
  ls_aliases
  color_prompt_configs
  git_completion
  rclone_alias
  eza_alias
  neovim_path
  neovim_default
  cargo_path
  nvm_path
  pyenv_path
)

for include in "${includes[@]}"; do
  config="$HOME/dotfiles/bash_configs/includes/$include"
  [[ -f "$config" ]] && source "$config"
done
