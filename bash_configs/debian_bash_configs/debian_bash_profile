#
# ~/.bash_profile
#

[[ -f ~/.bashrc ]] && . ~/.bashrc

if [[ "$(tty)" = "/dev/tty1" ]]; then
	pgrep i3 || startx "/home/sazk/.config/X11/xinitrc"
fi

# pyenv env path
if [ -f ~/dotfiles/bash_configs/includes/pyenv_path ]; then
	. ~/dotfiles/bash_configs/includes/pyenv_path
fi

# go env path
if [ -f ~/dotfiles/bash_configs/includes/go_path ]; then
	. ~/dotfiles/bash_configs/includes/go_path
fi
