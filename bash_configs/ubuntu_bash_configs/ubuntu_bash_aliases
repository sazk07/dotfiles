#
# ~/.bash_aliases
#

includes=(
	helper_functions
	ls_aliases
	git_completion
	rclone_alias
	eza_alias
	neovim_path
	neovim_default
	cargo_path
	nvm_path
	pyenv_path
	conda_path
	deno_path
)

for include in "${includes[@]}"; do
	config="$HOME/dotfiles/bash_configs/includes/$include"
	[[ -f "$config" ]] && source "$config
done
