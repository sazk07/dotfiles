#
# ~/.bash_aliases
#

# Load all Bash configuration includes from dotfiles
includes=(
	helper_functions
	ls_aliases
	git_completion
	rclone_alias
	eza_alias
	neovim_path
	neovim_default
	cargo_path
	nvm_path
	pyenv_path
	conda_path
	deno_path
)

for include in "${includes[@]}"; do
	config="$HOME/dotfiles/bash_configs/includes/$include"
	if [[ -r "$config" ]]; then
		source "$config"
	else
		printf 'Warning: %q not found or not readable. \n' "$config" >&2
	fi
done
