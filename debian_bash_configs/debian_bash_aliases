# custom helper functions
if [ -f ~/dotfiles/bash_configs/helper_functions ]; then
	. ~/dotfiles/bash_configs/helper_functions
fi

# custom configs
if [ -f ~/dotfiles/bash_configs/custom_configs ]; then
	. ~/dotfiles/bash_configs/custom_configs
fi

# enable git completion
if [ -f ~/dotfiles/bash_configs/git_completion ]; then
	. ~/dotfiles/bash_configs/git_completion
fi

# rclone configs
if [ -f ~/dotfiles/bash_configs/rclone_alias ]; then
	. ~/dotfiles/bash_configs/rclone_alias
fi

# eza configs
if [ -f ~/dotfiles/bash_configs/eza_alias ]; then
	. ~/dotfiles/bash_configs/eza_alias
fi

# making neovim the default
if [ -f ~/dotfiles/bash_configs/neovim_default ]; then
	. ~/dotfiles/bash_configs/neovim_default
fi

# cargo env path
if [ -f ~/dotfiles/bash_configs/cargo_path ]; then
	. ~/dotfiles/bash_configs/cargo_path
fi

# nvm env path
if [ -f ~/dotfiles/bash_configs/nvm_path ]; then
	. ~/dotfiles/bash_configs/nvm_path
fi

# pyenv env path
if [ -f ~/dotfiles/bash_configs/pyenv_path ]; then
	. ~/dotfiles/bash_configs/pyenv_path
fi

# neovim env path
if [ -f ~/dotfiles/bash_configs/neovim_path ]; then
	. ~/dotfiles/bash_configs/neovim_path
fi
