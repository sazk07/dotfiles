{
  "extends": "./configs/tsbase",
  "include": [
    "env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "composite": true,
    "rootDir": "./src",
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
