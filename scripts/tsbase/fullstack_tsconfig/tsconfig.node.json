{
  "extends": "./configs/tsbase",
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true,
    "rootDir": "./src",
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "module": "nodenext",
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator"
    ],
    "moduleResolution": "node16",
    "outDir": "./dist"
  }
}
