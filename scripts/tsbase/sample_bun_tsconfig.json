{
  "extends": "./configs/tsbase",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    // Environment setup & latest features
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
